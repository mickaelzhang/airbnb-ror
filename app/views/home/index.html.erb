<div class="hero">
  <div class="hero__container container">
    <h2 class="hero__title"><%= t('home.hero.title') %></h2>
    <%= form_tag({controller: "islands", action: "index"}, method: "get", class: "hero__form") do %>
      <div class="hero__date-input">
        <%= label :booking, :start_date, "Start date", class: "hero__input-label" %>
        <%= date_field :booking, :start_date, :value => Time.now.strftime("%Y-%m-%d") %>
      </div>
      <div class="hero__date-input">
        <%= label :booking, :end_date, "End date", class: "hero__input-label" %>
        <%= date_field :booking, :end_date, :value => Time.now.strftime("%Y-%m-%d") %>
      </div>
      <%= submit_tag 'Validez', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
