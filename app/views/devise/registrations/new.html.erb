<div class="container">
  <div class="row">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder:'Laura' %>
    </div>

    <div class="form-group row">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, class: 'form-control',placeholder:'Dupont' %>
    </div>

    <div class="form-group row">
      <%= f.label :avatar do %>
        <%= f.file_field :avatar, class: 'form-control-file' %>
        <%= f.hidden_field :avatar_cache %>
      <% end %>
    </div>

    <div class="form-group row">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control',placeholder:'laura.dupont@gmail.com' %>
    </div>

    <div class="form-group row">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:'******' %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder:'******' %>
    </div>

    <div class="form-group row actions">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div><br />
    <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>