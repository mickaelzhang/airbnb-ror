<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Back', islands_path %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-auto">
      <h2><%= @island.title %></h2>
      <% if user_signed_in? && current_user.id == @island.user_id %>
        <div><%= link_to 'Edit', edit_island_path %></div>
      <% end %>

      <% if !@island.average_rating.nil? %>
        <div>
          Score : <%= @island.average_rating %>/5
        </div>
      <% end %>

      <p><%= @island.description %></p>

      <% if !@island.image.nil? %>
        <img src="<%= @island.image %>">
      <% end %>
    </div>

    <div class="col-12 col-md-3">
      <%= render "islands/book_island_sidebar" %>
    </div>
  </div>
</div>
