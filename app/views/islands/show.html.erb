<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Retour', islands_path %>
    </div>
  </div>

  <div>
    <div class="col-12 col-md-auto">
      <h2><%= @island.title %></h2>
      <h4>Localisation : <%= @island.location %></h4>
      <% if user_signed_in? && current_user.id == @island.user_id %>
        <%= link_to 'Edit', edit_island_path %>
      <% end %>
      <br />
      <% if !@island.average_rating.nil? %>
          Score : <%= @island.average_rating %>/5
      <% end %>
      <br />
      <span>Description : <%= @island.description %></span>
      <br />
      <% if !@island.image.nil? %>
        <img src="<%= @island.image %>">
      <% end %>
      <br />
        <span>Taille : <%= @island.size %>km²</span>
      <br />
        <span>Prix par nuit : <%= @island.price_by_night %>€</span>
      <br />
        <span>Type d'île : <%= @island.island_type %></span>
      <br />
        <span>Capacitée maximum : <%= @island.max_person %> personnes</span>
      <br />
        <span>Nombre de chambre : <%= @island.max_bed_room %></span>
      <br />
        <span>Nombre de lit : <%= @island.max_bed %></span>
      <br />
        <span>Nombre de salle de bain : <%= @island.max_bath_room %></span>
      <br />
      <% if @island.additional_comment %>
        <span><%= @island.additional_comment %></span>
      <% end %>
    </div>

    <div class="island__booking">
      <%= render "islands/book_island_sidebar" %>
    </div>
  </div>
</div>
